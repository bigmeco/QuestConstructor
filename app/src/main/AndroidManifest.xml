<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigmeco.questconstructor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreatorActivity"
            android:theme="@style/CreatorActivityTheme" />
        <activity
            android:name=".CreatorScreenActivity"
            android:theme="@style/CreatorActivityTheme" />
        <activity
            android:name=".InfoQuestActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth" />
        <activity android:name=".ActionScreenActivity"
            android:theme="@style/CreatorActivityTheme" ></activity>
    </application>

</manifest>