<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigmeco.questconstructor">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.activity.StartActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".screen.activity.CreatorActivity"
            android:theme="@style/CreatorActivityTheme" />
        <activity
            android:name=".screen.activity.CreatorScreenActivity"
            android:theme="@style/CreatorActivityTheme" />
        <activity
            android:name=".screen.activity.InfoQuestActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth" />
        <activity
            android:name=".screen.activity.ActionScreenActivity"
            android:theme="@style/CreatorActivityTheme" />
        <activity android:name=".screen.activity.PublicationActivity" />
        <activity android:name=".screen.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.activity.RegistrationActivity"></activity>
    </application>

</manifest>